<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_remove_circle_24" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="2sp"
        android:text="Alok Jain"
        android:textColor="#4f5962"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_user"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:lineSpacingExtra="3sp"
        android:text="10-05-2020"
        android:textColor="#4f5962"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/img_user"
        app:layout_constraintTop_toBottomOf="@+id/txt_name" />

    <ImageView
        android:id="@+id/img_star_1"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/img_star_2"
        app:layout_constraintTop_toTopOf="@+id/img_star_2"
        app:srcCompat="@drawable/ic_star_filled" />

    <ImageView
        android:id="@+id/img_star_2"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/img_star_3"
        app:layout_constraintTop_toTopOf="@+id/img_star_3"
        app:srcCompat="@drawable/ic_star_filled" />

    <ImageView
        android:id="@+id/img_star_3"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/img_star_4"
        app:layout_constraintTop_toTopOf="@+id/img_star_4"
        app:srcCompat="@drawable/ic_star_filled" />

    <ImageView
        android:id="@+id/img_star_4"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/img_star_5"
        app:layout_constraintTop_toTopOf="@+id/img_star_5"
        app:srcCompat="@drawable/ic_star_filled" />

    <ImageView
        android:id="@+id/img_star_5"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="14.6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_star_filled" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:lineSpacingExtra="3sp"
        android:text="Nice Experience and ride!"
        android:textColor="#4f5962"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_user" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="23.5dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_content" />
</androidx.constraintlayout.widget.ConstraintLayout>