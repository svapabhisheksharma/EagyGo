<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="10dp"
    tools:layout_editor_absoluteX="24dp"
    tools:layout_editor_absoluteY="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/car_rounded"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imagefrag13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mini_png_11772" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/namefrag13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="#4f5962"
            android:lineSpacingExtra="2sp"
            android:text="Mini Cooper"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout5"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout5" />

        <TextView
            android:id="@+id/textView82"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="7dp"
            android:lineSpacingExtra="3sp"
            android:text="06-05-2020 / 02:00pm"
            android:textColor="#8e949a"

            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout5"
            app:layout_constraintTop_toBottomOf="@+id/namefrag13" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/statuscirclefrag13"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/car_rounded"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout5"
            app:layout_constraintTop_toBottomOf="@+id/textView82">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/statusfrag13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:lineSpacingExtra="3sp"
            android:text="PENDING"
            android:textColor="#ff1414"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/statuscirclefrag13"
            app:layout_constraintStart_toEndOf="@+id/statuscirclefrag13"
            app:layout_constraintTop_toTopOf="@+id/statuscirclefrag13" />

        <Button
            android:id="@+id/buttonfrag13"
            android:layout_width="56dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/blue_rounded"
            android:lineSpacingExtra="3sp"
            android:text="RATE"
            android:textColor="#ffffff"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>