<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_smoking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="19.5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_ciggarate" />

        <ImageView
            android:id="@+id/img_kids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_smoking"
            app:srcCompat="@drawable/ic_kids" />

        <TextView
            android:id="@+id/txt_smoking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="22.5dp"
            android:lineSpacingExtra="2sp"
            android:text="Smoking not allowed"
            android:textColor="#4f5962"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/img_smoking"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_kids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="2sp"
            android:text="Kids allowed"
            android:textColor="#4f5962"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/img_kids"
            app:layout_constraintTop_toBottomOf="@+id/txt_smoking" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout1"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_pets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="22.5dp"
            android:lineSpacingExtra="2sp"
            android:text="Pets allowed"
            android:textColor="#4f5962"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/img_pets"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_abroad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="2sp"
            android:text="Abroad allowed"
            android:textColor="#4f5962"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/img_abroad"
            app:layout_constraintTop_toBottomOf="@+id/txt_pets" />

        <ImageView
            android:id="@+id/img_pets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="19.5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_pets" />

        <ImageView
            android:id="@+id/img_abroad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_pets"
            app:srcCompat="@drawable/ic_abroad" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>