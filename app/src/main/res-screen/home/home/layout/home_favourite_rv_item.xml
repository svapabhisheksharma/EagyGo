<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    tools:layout_editor_absoluteX="24dp"
    tools:layout_editor_absoluteY="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_star_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toStartOf="@+id/img_star_3"
            app:layout_constraintTop_toBottomOf="@+id/img_car"
            app:srcCompat="@drawable/ic_star_filled" />

        <ImageView
            android:id="@+id/img_star_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toStartOf="@+id/img_star_4"
            app:layout_constraintTop_toBottomOf="@+id/img_car"
            app:srcCompat="@drawable/ic_star_filled" />

        <ImageView
            android:id="@+id/img_star_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toStartOf="@+id/img_star_2"
            app:layout_constraintTop_toBottomOf="@+id/img_car"
            app:srcCompat="@drawable/ic_star_filled" />

        <ImageView
            android:id="@+id/img_star_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toStartOf="@+id/img_star_5"
            app:layout_constraintTop_toBottomOf="@+id/img_car"
            app:srcCompat="@drawable/ic_star_filled" />

        <ImageView
            android:id="@+id/img_car"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home_banner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_carnam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Maruti Suzuki Baleno"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_car" />

        <ImageView
            android:id="@+id/img_star_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/txt_noofreviews"
            app:layout_constraintTop_toBottomOf="@+id/img_car"
            app:srcCompat="@drawable/ic_star_3_unfilled" />

        <TextView
            android:id="@+id/txt_noofreviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="(50)"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_car" />

        <TextView
            android:id="@+id/txt_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/grey_rounded"
            android:padding="3dp"
            android:text="2018"
            android:textColor="#ffffff"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_carnam" />

        <TextView
            android:id="@+id/txt_freekm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/grey_rounded"
            android:padding="3dp"
            android:text="Free 100km/day"
            android:textColor="#ffffff"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/txt_year"
            app:layout_constraintTop_toBottomOf="@+id/txt_carnam" />

        <TextView
            android:id="@+id/txt_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/grey_rounded"
            android:padding="3dp"
            android:text="485 M"
            android:textColor="#ffffff"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/txt_freekm"
            app:layout_constraintTop_toBottomOf="@+id/txt_carnam" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="INR 500/Day"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_year"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/img_starfav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:tint="#ffc107 "
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_star" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
