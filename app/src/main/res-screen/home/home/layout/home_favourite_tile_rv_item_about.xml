<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">


    <ImageView
        android:id="@+id/img_star_1"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="23.6dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/img_star_2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_star_filled" />

    <ImageView
        android:id="@+id/img_star_4"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="23.6dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/img_star_5"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_star_filled" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="22dp"
        android:lineSpacingExtra="3sp"
        android:text="Maruti Suzuki Baleno"
        android:textColor="#4f5962"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_star_2"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="23.6dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/img_star_3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_star_filled" />

    <ImageView
        android:id="@+id/img_star_3"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="23.6dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/img_star_4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_star_filled" />

    <ImageView
        android:id="@+id/img_star_5"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="23.6dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/txt_noofreviews"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_star_3_unfilled" />

    <TextView
        android:id="@+id/txt_noofreviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="18dp"
        android:lineSpacingExtra="3sp"
        android:text="(50)"
        android:textColor="#4f5962"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_petrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView37"
        app:srcCompat="@drawable/ic_petrol" />

    <ImageView
        android:id="@+id/img_road"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        app:layout_constraintEnd_toStartOf="@+id/img_gear"
        app:layout_constraintStart_toEndOf="@+id/img_petrol"
        app:layout_constraintTop_toBottomOf="@+id/textView37"
        app:srcCompat="@drawable/ic_highway" />

    <ImageView
        android:id="@+id/img_gear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView37"
        app:srcCompat="@drawable/ic_gear" />

    <TextView
        android:id="@+id/txt_petrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="2sp"
        android:text="Petrol"
        android:textColor="#2680eb"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_petrol" />

    <TextView
        android:id="@+id/txt_road"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="2sp"
        android:text="100km Free/Day"
        android:textColor="#2680eb"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_road"
        app:layout_constraintStart_toStartOf="@+id/img_road"
        app:layout_constraintTop_toBottomOf="@+id/img_road" />

    <TextView
        android:id="@+id/txt_gear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="44dp"
        android:lineSpacingExtra="2sp"
        android:text="Manual"
        android:textColor="#2680eb"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_gear" />

    <TextView
        android:id="@+id/txt_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="40dp"
        android:lineSpacingExtra="3sp"
        android:text="About Car "
        android:textColor="#4f5962"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_petrol" />

    <TextView
        android:id="@+id/tst_abouttext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:lineSpacingExtra="8sp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce a tincidunt mauris,"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_about" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8.5dp"
        android:background="@android:drawable/divider_horizontal_bright"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tst_abouttext" />


</androidx.constraintlayout.widget.ConstraintLayout>